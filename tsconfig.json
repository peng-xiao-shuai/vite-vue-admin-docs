{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "element-plus/global",
      "el-plus-powerful-table-ts/es/global"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    ".vitepress/**/*"
  ],
  "exclude": [
    "node_modules/**",
  ]
}
