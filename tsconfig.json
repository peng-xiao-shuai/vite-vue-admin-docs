{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,

    "types": ["vite/client", "element-plus/global"]
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    ".vitepress/**/*"
  ],
  "exclude": [
    "node_modules/**",
  ]
}
